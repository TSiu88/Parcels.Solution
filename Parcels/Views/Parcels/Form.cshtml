@{
  Layout = "_Layout";
}
<div class="container">
  <h1>Enter your parcel information:</h1>
  <form action="/result" method="post">
    <div class="form-group">
      <label for="weight">Parcel weight (lbs)</label>
      <input id="weight" name="weight" type="number" required>
    </div>
    <div class="form-group">
      <label for="length">Parcel length (inches)</label>
      <input id="length" name="length" type="number" required>
    </div>
    <div class="form-group">
      <label for="width">Parcel width (inches)</label>
      <input id="width" name="width" type="number" required>  
    </div>
    <div class="form-group">
      <label for="height">Parcel height (inches)</label>
      <input id="height" name="height" type="number" required>
    </div>

    <button class="btn" type="submit">Calculate Shipping Cost!</button>
  </form>
  <a href="/">Return To Home Page</a>
</div>